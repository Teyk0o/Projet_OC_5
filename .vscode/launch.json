    "version": "0.2.0",
    "configurations": [
        {
            "name": "Listen for Xdebug",
            "type": "php",
            "request": "launch",
            "port": 9003,
            "pathMappings": {
                "/var/www/html": "${workspaceFolder}"
            }
        },
        {
            "name": "Launch Built-in server & Profile",
            "type": "php",
            "request": "launch",
            "runtimeArgs": [
                "-S", "localhost:8888", "-t", "."
            ],
            "noDebug": true, // <-- disable debugging
            "profile": true, // <-- enable profiling
        }
    ]
}